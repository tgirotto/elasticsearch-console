<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
    <head>
        <% include ../partials/head %>
    </head>
    <body class="container">

        <header>
            <% include ../partials/header %>
        </header>
        <br>
        <br>
        <main>
          <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
              <form role="form" method="get" action="/create" enctype="multipart/form-data">
              <div class="form-group">
                <input placeholder="Index..." id="index" type="text" class="form-control" name="index">
              </div>
              <div class="form-group">
                <input placeholder="Type..." id="type" type="text" class="form-control" name="type">
              </div>
              <div class="form-group">
                <input placeholder="Number of nodes..." id="node_number" type="text" class="form-control" name="node_number">
              </div>
              <div class="form-group">
                <input placeholder="Primary shards number..." id="primary_shard_number" type="text" class="form-control" name="primary_shard_number">
              </div>
              <div class="form-group">
                <input placeholder="Replica shards number..." id="replica_shard_number" type="text" class="form-control" name="replica_shard_number">
              </div>
              <button type="submit" class="btn btn-primary">Run</button>
            </form>
            </div>
          </div>
        </main>
        <br>
        <footer>
            <% include ../partials/footer %>
        </footer>
    </body>
</html>